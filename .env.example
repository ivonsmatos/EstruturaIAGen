# ============================================================================
# Configuração do Dashboard EstruturaIAGen
# ============================================================================

# Mode: 'true' para desenvolvimento, 'false' para produção
DASH_DEBUG=false

# ============================================================================
# DATABASE CONFIGURATION (P1.2)
# ============================================================================

# URL de conexão com BD (SQLite ou PostgreSQL)
DATABASE_URL=sqlite:///./data.db
# DATABASE_URL=postgresql://user:password@localhost:5432/dashboard

# Connection Pooling
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# SQL Query Logging (debug)
SQL_ECHO=false

# ============================================================================
# AWS CONFIGURATION (Futuro - P2)
# ============================================================================

# AWS (para P1 - Integração)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_BUCKET_NAME=

# Logging
LOG_LEVEL=INFO

# Server
SERVER_HOST=127.0.0.1
SERVER_PORT=8050
